        <script>
            window.onload = function() {
                sample4_execDaumPostcode();
            }

            // 본 예제에서는 도로명 주소 표기 방식에 대한 법령에 따라, 내려오는 데이터를 조합하여 올바른 주소를 구성하는 방법을 설명합니다.
            function sample4_execDaumPostcode() {
                new daum.Postcode({
                    oncomplete: function(data) {
                        console.log(data);
                        $.ajax({
                            url: '/api/postcode',
                            method: 'POST',
                            data: data,
                            success: function (data) {
                                console.log("OK");
                            }
                        })
                    }
                }).open();
            }
        </script>
    </body>
